    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        String user = userno.getText();
        try {
            int un = Integer.parseInt(user);
            guesses++; // Increment the guesses count
            if(un <= 0 || un > 100){
                result.setText("Invalid Guess");
            }
            else if(un == compno){
                result.setText("Your guess is correct..!!You won!!..You got it in "+ guesses +"Tries");    
            }
            else if(un > compno){
                result.setText("Your guess is Too High !!!");
            }
            else if(un < compno){
                result.setText("Your guess is Too Low !!!");
            }
            else{
                result.setText("Your guess is incorrect !!!");
            }
        }
        catch (NumberFormatException e) {
            result.setText("Invalid Input. Please enter a valid number.");
        }
       
    }                                        

    private void CompnooMouseClicked(java.awt.event.MouseEvent evt) {                                     
        // TODO add your handling code here:
        compno = (int)(Math.random()*100 +1);
        str2 =Integer.toString(compno);
        Compnoo.setText(str2);
        guesses = 0;
    }                                    

